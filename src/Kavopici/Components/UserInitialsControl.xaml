<UserControl x:Class="Kavopici.Components.UserInitialsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">
    <Border x:Name="CircleBorder"
            Width="{Binding Size, ElementName=Root}"
            Height="{Binding Size, ElementName=Root}"
            CornerRadius="{Binding HalfSize, ElementName=Root}">
        <TextBlock x:Name="InitialsText"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="White"
                   FontWeight="Bold"
                   FontFamily="{StaticResource HeadingFont}" />
    </Border>
</UserControl>

<UserControl x:Class="Kavopici.Components.BlendCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Kavopici.Converters"
             x:Name="Root">
    <UserControl.Resources>
        <converters:RoastLevelToStringConverter x:Key="RoastLevelConverter" />
    </UserControl.Resources>

    <Border Style="{StaticResource CardBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="16" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="16" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Section label -->
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                       Text="DNEŠNÍ KÁVA" Style="{StaticResource LabelStyle}"
                       Margin="0,0,0,8" />

            <!-- Blend name -->
            <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                       Text="{Binding BlendName, ElementName=Root}"
                       Style="{StaticResource DisplayStyle}"
                       Margin="0,0,0,4" />

            <!-- Roaster -->
            <TextBlock Grid.Row="2" Grid.ColumnSpan="2"
                       Text="{Binding Roaster, ElementName=Root}"
                       Style="{StaticResource SubheadingStyle}" />

            <!-- Origin & Roast Level -->
            <StackPanel Grid.Row="4" Grid.Column="0">
                <TextBlock Text="PŮVOD" Style="{StaticResource LabelStyle}" Margin="0,0,0,4" />
                <TextBlock Text="{Binding Origin, ElementName=Root, TargetNullValue='—'}"
                           Style="{StaticResource BodyStyle}" />
            </StackPanel>

            <StackPanel Grid.Row="4" Grid.Column="1">
                <TextBlock Text="STUPEŇ PRAŽENÍ" Style="{StaticResource LabelStyle}" Margin="0,0,0,4" />
                <TextBlock Text="{Binding RoastLevel, ElementName=Root, Converter={StaticResource RoastLevelConverter}}"
                           Style="{StaticResource BodyStyle}" />
            </StackPanel>

            <!-- Supplier -->
            <StackPanel Grid.Row="6" Grid.ColumnSpan="2">
                <TextBlock Text="DODAVATEL" Style="{StaticResource LabelStyle}" Margin="0,0,0,4" />
                <TextBlock Text="{Binding SupplierName, ElementName=Root}"
                           Style="{StaticResource BodyStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

<UserControl x:Class="Kavopici.Components.StarRatingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="Star1" Content="&#9733;" Tag="1"
                Click="Star_Click" MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave"
                Style="{StaticResource StarButton}"
                AutomationProperties.Name="Hvězda 1"
                RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform><ScaleTransform x:Name="Star1Scale" /></Button.RenderTransform>
        </Button>
        <Button x:Name="Star2" Content="&#9733;" Tag="2"
                Click="Star_Click" MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave"
                Style="{StaticResource StarButton}"
                AutomationProperties.Name="Hvězda 2"
                RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform><ScaleTransform x:Name="Star2Scale" /></Button.RenderTransform>
        </Button>
        <Button x:Name="Star3" Content="&#9733;" Tag="3"
                Click="Star_Click" MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave"
                Style="{StaticResource StarButton}"
                AutomationProperties.Name="Hvězda 3"
                RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform><ScaleTransform x:Name="Star3Scale" /></Button.RenderTransform>
        </Button>
        <Button x:Name="Star4" Content="&#9733;" Tag="4"
                Click="Star_Click" MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave"
                Style="{StaticResource StarButton}"
                AutomationProperties.Name="Hvězda 4"
                RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform><ScaleTransform x:Name="Star4Scale" /></Button.RenderTransform>
        </Button>
        <Button x:Name="Star5" Content="&#9733;" Tag="5"
                Click="Star_Click" MouseEnter="Star_MouseEnter" MouseLeave="Star_MouseLeave"
                Style="{StaticResource StarButton}"
                AutomationProperties.Name="Hvězda 5"
                RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform><ScaleTransform x:Name="Star5Scale" /></Button.RenderTransform>
        </Button>
    </StackPanel>

    <UserControl.Resources>
        <Style x:Key="StarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="{Binding StarSize, ElementName=Root}" />
            <Setter Property="MinWidth" Value="40" />
            <Setter Property="MinHeight" Value="40" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Foreground" Value="{StaticResource SilverBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
</UserControl>

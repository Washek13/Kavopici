<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Main title (24px, uppercase, bold) -->
    <Style x:Key="TitleStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource HeadingFont}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <!-- Section heading (14px, uppercase, bold) -->
    <Style x:Key="HeadingStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource HeadingFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource CoffeeDarkBrush}" />
    </Style>

    <!-- Subheading -->
    <Style x:Key="SubheadingStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource HeadingFont}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource CoffeeBrownBrush}" />
    </Style>

    <!-- Label (11px, uppercase, silver) -->
    <Style x:Key="LabelStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource HeadingFont}" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource SilverBrush}" />
    </Style>

    <!-- Body text -->
    <Style x:Key="BodyStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource BodyFont}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{StaticResource CoffeeDarkBrush}" />
    </Style>

    <!-- Large display text -->
    <Style x:Key="DisplayStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource HeadingFont}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource CoffeeDarkBrush}" />
    </Style>

    <!-- Status message -->
    <Style x:Key="StatusStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource BodyFont}" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="{StaticResource CoffeeBrownBrush}" />
        <Setter Property="FontStyle" Value="Italic" />
    </Style>

    <!-- Error message -->
    <Style x:Key="ErrorStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource BodyFont}" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="{StaticResource ErrorRedBrush}" />
    </Style>

    <!-- TextBox styling -->
    <Style x:Key="CoffeeTextBox" TargetType="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource BodyFont}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="BorderBrush" Value="{StaticResource SilverBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="{StaticResource CoffeeDarkBrush}" />
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource CoffeeLightBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ComboBox styling -->
    <Style x:Key="CoffeeComboBox" TargetType="ComboBox">
        <Setter Property="FontFamily" Value="{StaticResource BodyFont}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="Foreground" Value="{StaticResource CoffeeDarkBrush}" />
    </Style>

</ResourceDictionary>

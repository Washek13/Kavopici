<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Standard panel: cream bg, 1px silver border, sharp corners -->
    <Style x:Key="PanelBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CreamBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource SilverBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="20" />
    </Style>

    <!-- Dark header panel -->
    <Style x:Key="HeaderPanel" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource HeaderGradientBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="20,12" />
    </Style>

    <!-- Card panel: white bg, slightly elevated -->
    <Style x:Key="CardBorder" TargetType="Border">
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="{StaticResource SilverBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.1"
                                  Color="{StaticResource CoffeeDarkColor}" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Accent border (left-side accent like R&S status pattern) -->
    <Style x:Key="AccentLeftBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CreamBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource AmberGoldBrush}" />
        <Setter Property="BorderThickness" Value="3,0,0,0" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="16,12" />
    </Style>

    <!-- Separator line -->
    <Style x:Key="SeparatorLine" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource SilverBrush}" />
        <Setter Property="Height" Value="1" />
        <Setter Property="Margin" Value="0,8" />
    </Style>

</ResourceDictionary>

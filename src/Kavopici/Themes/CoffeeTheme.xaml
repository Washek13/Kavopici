<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="CoffeeDarkColor">#2C1810</Color>
    <Color x:Key="CoffeeMediumColor">#4A2C2A</Color>
    <Color x:Key="CoffeeBrownColor">#6F4E37</Color>
    <Color x:Key="CoffeeLightColor">#8B6914</Color>
    <Color x:Key="EspressoColor">#3C1414</Color>
    <Color x:Key="CreamColor">#FFF8F0</Color>
    <Color x:Key="OffWhiteColor">#FAF5EF</Color>
    <Color x:Key="AmberGoldColor">#D4A017</Color>
    <Color x:Key="SilverColor">#A5AAAF</Color>
    <Color x:Key="ErrorRedColor">#A50F14</Color>
    <Color x:Key="WarningOrangeColor">#EA5B0C</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="CoffeeDarkBrush" Color="{StaticResource CoffeeDarkColor}" />
    <SolidColorBrush x:Key="CoffeeMediumBrush" Color="{StaticResource CoffeeMediumColor}" />
    <SolidColorBrush x:Key="CoffeeBrownBrush" Color="{StaticResource CoffeeBrownColor}" />
    <SolidColorBrush x:Key="CoffeeLightBrush" Color="{StaticResource CoffeeLightColor}" />
    <SolidColorBrush x:Key="EspressoBrush" Color="{StaticResource EspressoColor}" />
    <SolidColorBrush x:Key="CreamBrush" Color="{StaticResource CreamColor}" />
    <SolidColorBrush x:Key="OffWhiteBrush" Color="{StaticResource OffWhiteColor}" />
    <SolidColorBrush x:Key="AmberGoldBrush" Color="{StaticResource AmberGoldColor}" />
    <SolidColorBrush x:Key="SilverBrush" Color="{StaticResource SilverColor}" />
    <SolidColorBrush x:Key="ErrorRedBrush" Color="{StaticResource ErrorRedColor}" />
    <SolidColorBrush x:Key="WarningOrangeBrush" Color="{StaticResource WarningOrangeColor}" />

    <!-- Header gradient (coffee-themed, R&S dark panel pattern) -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource CoffeeDarkColor}" Offset="0" />
        <GradientStop Color="{StaticResource CoffeeMediumColor}" Offset="0.5" />
        <GradientStop Color="{StaticResource CoffeeBrownColor}" Offset="1" />
    </LinearGradientBrush>

    <!-- Fonts -->
    <FontFamily x:Key="HeadingFont">Arial Narrow, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="BodyFont">Arial, sans-serif</FontFamily>

</ResourceDictionary>

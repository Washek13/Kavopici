<Window x:Class="Kavopici.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Kavopici.ViewModels"
        xmlns:views="clr-namespace:Kavopici.Views"
        Title="Kávopíči"
        MinWidth="800" MinHeight="600"
        Width="1000" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource OffWhiteBrush}">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:StatisticsViewModel}">
            <views:StatisticsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AdminViewModel}">
            <views:AdminView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BlendDetailViewModel}">
            <views:BlendDetailView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ComparisonViewModel}">
            <views:ComparisonView />
        </DataTemplate>
    </Window.Resources>

    <Grid MaxWidth="1000" HorizontalAlignment="Center">
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>

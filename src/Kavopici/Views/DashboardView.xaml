<UserControl x:Class="Kavopici.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:Kavopici.Components"
             xmlns:converters="clr-namespace:Kavopici.Converters"
             Loaded="OnLoaded">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
        <converters:NotNullToVisibilityConverter x:Key="NotNullToVis" />
    </UserControl.Resources>

    <DockPanel>
        <!-- Header bar -->
        <Border DockPanel.Dock="Top" Style="{StaticResource HeaderPanel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="KÁVOPÍČI"
                           Style="{StaticResource TitleStyle}"
                           VerticalAlignment="Center" />

                <StackPanel Grid.Column="2" Orientation="Horizontal"
                            VerticalAlignment="Center" Margin="0,0,16,0">
                    <components:UserInitialsControl
                        UserName="{Binding UserDisplayName}"
                        Size="28" Margin="0,0,8,0" />
                    <TextBlock Text="{Binding UserDisplayName}"
                               Style="{StaticResource BodyStyle}"
                               Foreground="White"
                               VerticalAlignment="Center" />
                </StackPanel>

                <Button Grid.Column="3" Content="OBNOVIT"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Foreground="White" BorderBrush="White"
                        Margin="0,0,8,0" />

                <Button Grid.Column="4" Content="ODHLÁSIT"
                        Command="{Binding LogoutCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Foreground="White" BorderBrush="White" />
            </Grid>
        </Border>

        <!-- Main content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Today's blend card -->
                <components:BlendCard
                    BlendName="{Binding TodayBlend.Name}"
                    Roaster="{Binding TodayBlend.Roaster}"
                    Origin="{Binding TodayBlend.Origin}"
                    RoastLevel="{Binding TodayBlend.RoastLevel}"
                    SupplierName="{Binding TodayBlend.Supplier.Name}"
                    Visibility="{Binding HasBlendToday, Converter={StaticResource BoolToVis}}"
                    Margin="0,0,0,20" />

                <!-- No blend message -->
                <Border Style="{StaticResource AccentLeftBorder}"
                        Margin="0,0,0,20"
                        Visibility="{Binding HasBlendToday, Converter={StaticResource InverseBoolToVis}}">
                    <TextBlock Text="Dnes nebyla vybrána žádná káva."
                               Style="{StaticResource BodyStyle}"
                               FontSize="14" />
                </Border>

                <!-- Rating panel (when blend exists) -->
                <Border Style="{StaticResource PanelBorder}"
                        Margin="0,0,0,20"
                        Visibility="{Binding HasBlendToday, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <!-- Not yet rated / editing -->
                        <StackPanel Visibility="{Binding HasRated, Converter={StaticResource InverseBoolToVis}}">
                            <TextBlock Text="VAŠE HODNOCENÍ" Style="{StaticResource LabelStyle}"
                                       Margin="0,0,0,12" />

                            <components:StarRatingControl
                                Rating="{Binding SelectedStars, Mode=TwoWay}"
                                StarSize="36"
                                Margin="0,0,0,16" />

                            <TextBlock Text="CHUŤOVÉ POZNÁMKY" Style="{StaticResource LabelStyle}"
                                       Margin="0,0,0,8" />
                            <ItemsControl ItemsSource="{Binding AvailableNotes}" Margin="0,0,0,16">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ToggleButton Content="{Binding Name}"
                                                      IsChecked="{Binding IsSelected}"
                                                      Margin="0,0,6,6"
                                                      Padding="10,6"
                                                      FontSize="11"
                                                      Cursor="Hand">
                                            <ToggleButton.Style>
                                                <Style TargetType="ToggleButton">
                                                    <Setter Property="Background" Value="{StaticResource CreamBrush}" />
                                                    <Setter Property="Foreground" Value="{StaticResource CoffeeDarkBrush}" />
                                                    <Setter Property="BorderBrush" Value="{StaticResource SilverBrush}" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        Padding="{TemplateBinding Padding}"
                                                                        CornerRadius="0">
                                                                    <ContentPresenter HorizontalAlignment="Center" />
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource CoffeeBrownBrush}" />
                                                            <Setter Property="Foreground" Value="White" />
                                                            <Setter Property="BorderBrush" Value="{StaticResource CoffeeBrownBrush}" />
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="BorderBrush" Value="{StaticResource CoffeeLightBrush}" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ToggleButton.Style>
                                        </ToggleButton>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="KOMENTÁŘ (NEPOVINNÝ)" Style="{StaticResource LabelStyle}"
                                       Margin="0,0,0,8" />

                            <TextBox Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource CoffeeTextBox}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     MinHeight="60"
                                     MaxHeight="120"
                                     Margin="0,0,0,16" />

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="ZRUŠIT"
                                        Command="{Binding CancelEditCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}"
                                        Margin="0,0,8,0" />

                                <Button Command="{Binding SubmitRatingCommand}"
                                        Style="{StaticResource AccentButton}">
                                    <Button.Content>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="ODESLAT HODNOCENÍ" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                            <Setter Property="Text" Value="ULOŽIT ZMĚNY" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                        <!-- Already rated (read-only) -->
                        <StackPanel Visibility="{Binding HasRated, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="VAŠE HODNOCENÍ" Style="{StaticResource LabelStyle}"
                                       Margin="0,0,0,12" />

                            <components:StarRatingControl
                                Rating="{Binding SelectedStars}"
                                IsReadOnly="True"
                                StarSize="36"
                                Margin="0,0,0,8" />

                            <TextBlock Text="{Binding Comment}"
                                       Style="{StaticResource BodyStyle}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"
                                       Visibility="{Binding Comment, Converter={StaticResource NotNullToVis}}" />

                            <TextBlock Text="{Binding StatusMessage}"
                                       Style="{StaticResource StatusStyle}"
                                       Margin="0,0,0,8" />

                            <Button Content="UPRAVIT HODNOCENÍ"
                                    Command="{Binding EditRatingCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    HorizontalAlignment="Left" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Highlights -->
                <Border Style="{StaticResource PanelBorder}"
                        Margin="0,0,0,20"
                        Visibility="{Binding HasHighlights, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <TextBlock Text="PŘEHLED" Style="{StaticResource LabelStyle}" Margin="0,0,0,12" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Top blend -->
                            <Border Grid.Column="0" Style="{StaticResource AccentLeftBorder}" Margin="0,0,8,0">
                                <StackPanel>
                                    <TextBlock Text="NEJLEPŠÍ SMĚS" Style="{StaticResource LabelStyle}"
                                               FontSize="9" Margin="0,0,0,4" />
                                    <TextBlock Text="{Binding TopBlendName}"
                                               Style="{StaticResource BodyStyle}"
                                               FontWeight="Bold" />
                                    <TextBlock Text="{Binding TopBlendRating, StringFormat='{}{0:F1} / 5'}"
                                               Style="{StaticResource LabelStyle}" />
                                </StackPanel>
                            </Border>

                            <!-- Most active -->
                            <Border Grid.Column="1" Style="{StaticResource AccentLeftBorder}">
                                <StackPanel>
                                    <TextBlock Text="VAŠE HODNOCENÍ" Style="{StaticResource LabelStyle}"
                                               FontSize="9" Margin="0,0,0,4" />
                                    <TextBlock Text="{Binding MostActiveRater}"
                                               Style="{StaticResource BodyStyle}"
                                               FontWeight="Bold" />
                                    <TextBlock Style="{StaticResource LabelStyle}">
                                        <Run Text="{Binding MostActiveRaterCount, Mode=OneWay}" />
                                        <Run Text=" hodnocení celkem" />
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Error message -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Style="{StaticResource ErrorStyle}"
                           Margin="0,0,0,16"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource NotNullToVis}}" />

                <!-- Navigation buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                    <Button Content="STATISTIKY"
                            Command="{Binding NavigateToStatisticsCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,0,12,0" />

                    <Button Content="SPRÁVA"
                            Command="{Binding NavigateToAdminCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
